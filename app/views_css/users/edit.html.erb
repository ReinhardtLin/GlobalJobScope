<%= render "menu" %>

<h3>Basic Profile</h3>

<% @user.speakings.build if @user.speakings.empty? %>

<%= form_for @user, :url => user_path(@user), :html => { :multipart => true }, :method => :patch do |f| %>

  <%= f.label :username, "Username" %>
  <%= f.text_field :username %><br>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %><br>

  <%= f.label :photo, "Photo" %>
  <%= image_tag( @user.logo.url(:medium) ) %>
  <%= f.file_field :logo %> <br>

  <%= f.label :summary, "Summary" %>
  <%= f.text_area :summary %> <br>

  <%= f.label :country, "Citizen of (country)" %>
  <%= f.text_field :all_countries, placeholder: "Countries separated with comma" %> <br>

  <%= f.label :country, "Countries eligible to work in" %>
  <%= f.text_field :all_eligibles, placeholder: "Countries separated with comma" %> <br>

  <%= f.label :location, "Location (City)" %>
  <%= f.text_field :all_locations, placeholder: "Locations separated with comma" %> <br>

  <%= f.label :birthday, "Birthday"%>
  <%= f.date_field :birthday %><br>

  <%= f.label :gender, "Gender" %>
  <%= f.collection_select(:gender_id, Gender.all, :id, :name) %> <br>

  <%= f.submit "Save Change" %>
<% end %>

<%= link_to 'Exit', user_path(current_user) %> <br>
<%= form_for @job, :url => job_path(@job), :method => :patch do |f| %>

  <%= f.label :benefit, "Benefit" %>
  <%= f.text_area :benefit %><br>

  <%= f.label :company_profile, "Company Profile" %>
  <%= f.text_area :company_profile %><br>

  <%= f.submit "Save Change" %>
<% end %>


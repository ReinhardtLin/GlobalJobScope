<!DOCTYPE html>
<html>
<head>
  <title>Global Job Scope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to 'GJS Logo', root_path %> ||

<% if current_user %>
  <%= link_to 'My Follow', following_jobs_path %> |
  <%= link_to 'My Post', posting_jobs_path %> |
  <%= link_to 'My Profile', user_path(current_user) %> |
  <%= link_to('My Setting', edit_registration_path(:user)) %> |
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
  <%= link_to('Sign Up', new_registration_path(:user)) %> |
  <%= link_to('Login', new_session_path(:user)) %>
<% end %> <br>


<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:alert] %></p>
<%= yield %>

</body>
</html>
